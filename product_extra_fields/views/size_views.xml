<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Vista de lista al abrir el menu del modelo Talla -->
    <record id="size_list_view" model="ir.ui.view">
        <field name="name">size.list.view</field>
        <field name="model">product_extra_fields.product_size</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="intervalo"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario al abrir el menu del modelo Talla -->
    <record id="size_form_view" model="ir.ui.view">
        <field name="name">size.form.view</field>
        <field name="model">product_extra_fields.product_size</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="intervalo"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
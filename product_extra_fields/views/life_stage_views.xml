<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Vista de lista al abrir el menu del modelo Etapas de Vida -->
    <record id="life_stage_list_view" model="ir.ui.view">
        <field name="name">life_stage.list.view</field>
        <field name="model">product_extra_fields.product_life_stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario al abrir el menu del modelo Etapas de Vida -->
    <record id="life_stage_form_view" model="ir.ui.view">
        <field name="name">life_stage.list.view</field>
        <field name="model">product_extra_fields.product_life_stage</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
